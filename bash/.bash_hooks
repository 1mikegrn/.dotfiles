#!/bin/bash

escape_flip() {
    CMD=$1
    ARGS=${*:2}
    eval ${CMD:1} ${ARGS// /\\ }
}

vimlike_commands() {
    CMD=$1
    CMD=${CMD:1}
    case $CMD in
        *) _command_not_found_handle $@ ;;
    esac
}

_command_not_found_handle() {
    echo "bash: $1: command not found..."
}

command_not_found_handle () {
    case $1 in
        \\*) escape_flip $@ ;;
        :*) vimlike_commands $@ ;;
        *) _command_not_found_handle $@ ;;
    esac
}

