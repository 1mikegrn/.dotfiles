install() {
    if [ $2 = "deps" ]
    then
        git submodule update
        if [ -x "$(command -v pacman)" ]
        then
            sudo pacman -Sy stow
        elif [ -x "$(command -v apt-get)" ]
        then
            sudo apt-get install stow
        fi
    else
        pushd ~/.dotfiles > /dev/null

        for folder in $(ls -d */ | sed "s/,/ /g")
        do
            stow -D $folder
            stow $folder
        done
        ~/.fzf/install
        popd > /dev/null
    fi
}

clean() {
    echo "nothing here yet..."
}

case $1 in
    "install") install $@ ;;
    "clean") clean $@ ;;
esac
