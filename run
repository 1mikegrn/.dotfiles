install() {
    if [ $2 = "deps" ]
    then
        sudo pacman -Sy stow fzf
    else
        pushd ~/.dotfiles > /dev/null

        for folder in $(ls -d */ | sed "s/,/ /g")
        do
            stow -D $folder
            stow $folder
        done
        popd > /dev/null
    fi
}

clean() {
    echo "nothing here yet..."
}

case $1 in
    "install") install $@ ;;
    "clean") clean $@ ;;
esac
